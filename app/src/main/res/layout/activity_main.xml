<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

 <androidx.recyclerview.widget.RecyclerView
     android:id="@+id/recycler_layout"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
     app:layout_constraintTop_toTopOf="parent"
     tools:ignore="UnknownId,UnknownIdInLayout" />

 <LinearLayout
     android:id="@+id/bottom_menu"
     android:layout_width="match_parent"
     android:layout_height="66dp"
     android:background="@color/secondary2"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent">

  <LinearLayout
      android:id="@+id/menu_addCar"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

   <ImageView
       android:id="@+id/addCarIcon"
       android:layout_width="51dp"
       android:layout_height="42dp"
       android:layout_gravity="center"
       app:srcCompat="@drawable/addhotel" />

   <TextView
       android:id="@+id/addCarText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="Add Hotel" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/menu_feedback"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

   <ImageView
       android:id="@+id/FeedbackIcon"
       android:layout_width="49dp"
       android:layout_height="33dp"
       android:layout_gravity="center"
       android:layout_marginTop="7dp"
       app:srcCompat="@drawable/feedback" />

   <TextView
       android:id="@+id/FeedbackText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="2dp"
       android:text="Feedback" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/menu_search"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

   <ImageView
       android:id="@+id/searchIcon"
       android:layout_width="49dp"
       android:layout_height="44dp"
       android:layout_gravity="center"
       app:srcCompat="@drawable/sd" />

   <TextView
       android:id="@+id/searchText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="Search Hotel" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/menu_home"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

   <ImageView
       android:id="@+id/homeIcon"
       android:layout_width="49dp"
       android:layout_height="44dp"
       android:layout_gravity="center"
       app:srcCompat="@drawable/home" />

   <TextView
       android:id="@+id/homeText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="Home" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/menu_aboutus"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

   <ImageView
       android:id="@+id/aboutusIcon"
       android:layout_width="46dp"
       android:layout_height="39dp"
       android:layout_gravity="center"
       android:layout_marginTop="5dp"
       app:srcCompat="@drawable/aboutus" />

   <TextView
       android:id="@+id/aboutusText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="About Us" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/menu_account"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

   <ImageView
       android:id="@+id/accountIcon"
       android:layout_width="46dp"
       android:layout_height="37dp"
       android:layout_gravity="center"
       android:layout_marginTop="5dp"
       app:srcCompat="@drawable/account" />

   <TextView
       android:id="@+id/accountText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="Profile" />
  </LinearLayout>

 </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
